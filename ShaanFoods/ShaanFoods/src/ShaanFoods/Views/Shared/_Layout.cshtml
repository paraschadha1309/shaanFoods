<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShaanFoods</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
      
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp:image asp-controller="Home" asp-action="Index" >
                    <img src="~/images/StoreLogo.png" height="185" width="165" />
                </a>
                <!--<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">ShaanFoods</a>-->
                @*<img src="~/images/icon.png" height="100" width="100" />*@
            </div>
            <div class="navbar-collapse collapse" id="navbarMenu">                
                    <div class="top_icons">
                        <a class="btn view-card cartbtn" id="orderOnline" asp-controller="CustomerOrders" asp-action="Create">
                            <i class="fa fa-shopping-cart"></i>
                            <span class="badge">0</span> Shopping Cart
                        </a><&nbsp;>
                        <img src="~/images/icon.png" height="50" width="50" alt="halal">                        
                        <img src="~/images/SargentFarm.png" height="58" width="93" alt="sargentFarm">
                        </div>                        

                        <ul class="nav navbar-nav">
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li id="adminDropdown" class="dropdown">
                                <a href="#" class="dropdown-toggle-inverse" data-toggle="dropdown">Products<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="ProductsCategories" asp-action="Index" asp-route-productId="1">Beef</a></li>
                                    <li><a asp-controller="ProductsCategories" asp-action="Index" asp-route-productId="3">Veal</a></li>
                                    <li><a asp-controller="ProductsCategories" asp-action="Index" asp-route-productId="5">Lamb</a></li>
                                    <li><a asp-controller="ProductsCategories" asp-action="Index" asp-route-productId="6">Goat</a></li>
                                    <li><a asp-controller="ProductsCategories" asp-action="Index" asp-route-productId="7">Chicken</a></li>
                                    <li><a asp-controller="ProductsCategories" asp-action="Index" asp-route-productId="2">Beef Steaks</a></li>
                                    <li><a asp-controller="ProductsCategories" asp-action="Index" asp-route-productId="4">Veal Steaks</a></li>
                                </ul>
                            </li>
                            <li><a asp-area="" asp-controller="Flyer" asp-action="Index">Flyer</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Order Online</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                            <li><a asp-area="" asp-controller="Feedbacks" asp-action="Create">Contact Us</a></li>
                        </ul>
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

        @*<footer>
            <p>&copy; 2017 - ShaanFoods</p>
        </footer>*@
        <footer>
            <div class="panel-footer" style="background-color: cornflowerblue;">
                
                    <p class="text-center">&copy; 2017 - ShaanFoods. All Rights Reserved<br />
                    Cambridge Butcher Shop/Grocery Store<br />
                    Proudly serving Kitchner, Cambridge, Waterloo and Surrounding Areas!
                 </p>
                
            </div>

        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
