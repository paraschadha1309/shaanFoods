        <div class="col-xs-3">
            <h1>Opening Hours</h1>
        @{ 
            TimeSpan start = new TimeSpan(10, 0, 0); //10 o'clock
            TimeSpan end = new TimeSpan(20, 0, 0); //8 o'clock
            TimeSpan sunEnd = new TimeSpan(17, 0, 0); //5 o'clock
            string dayOfWeek = DateTime.Now.DayOfWeek.ToString();
            if (dayOfWeek == "Sunday")
            {
                if (DateTime.Now.TimeOfDay > sunEnd || DateTime.Now.TimeOfDay < start)
                {
                    ViewBag.Status = "Closed";
                }
                else
                {
                    ViewBag.Status = "Open";
                    
                }
            }
            else
            {
                if (DateTime.Now.TimeOfDay > end || DateTime.Now.TimeOfDay < start)
                {
                    ViewBag.Status = "Closed";
                }
                else
                {
                    ViewBag.Status = "Open";
                }
            }

            }
            <h3 id="status">@ViewBag.Status</h3>
            <p >Hours: <br />
                Monday: 10AM - 8PM<br />
                Tuesday: 10AM - 8PM<br />
                Wedday: 10AM - 8PM<br />
                Thursday: 10AM - 8PM<br />
                Friday: 10AM - 8PM<br />
                Saturday: 10AM - 8PM<br />
                Sunday: 10AM - 5PM
</p>
            
